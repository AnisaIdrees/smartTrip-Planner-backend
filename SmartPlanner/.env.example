# =============================================
# SmartTrip Planner - Environment Variables
# =============================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to git!

# ==================== DATABASE ====================
# MongoDB Connection URI
# Format: mongodb+srv://username:password@cluster/database
MONGODB_URI=mongodb+srv://your_username:your_password@cluster.mongodb.net/smartplanner?retryWrites=true&w=majority
MONGODB_DATABASE=smartplanner

# ==================== SERVER ====================
SERVER_PORT=8081

# ==================== JWT AUTHENTICATION ====================
# Use a strong random secret key (min 256 bits)
JWT_SECRET=your_super_secret_key_here_min_32_characters
JWT_EXPIRATION=86400000

# ==================== EMAIL CONFIGURATION ====================
# Gmail SMTP (Use App Password, not regular password)
# To generate App Password: Google Account > Security > 2-Step Verification > App Passwords
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here

# ==================== FILE UPLOAD ====================
FILE_UPLOAD_DIR=uploads
FILE_BASE_URL=http://localhost:8081/uploads
MAX_FILE_SIZE=5MB

# ==================== APP CONFIG ====================
APP_NAME=SmartTrip Planner
